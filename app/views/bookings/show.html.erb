<% if @booking.listing.photos.length > 0 %>
	<%= image_tag @booking.listing.photos.first, id:"listing_preview"%>
<% else %>
  <img id="listing_preview" src="/assets/no-preview.jpg">
<% end %>


<p>
  <strong>Num of guest:</strong>
  <%= @booking.num_guests %>
</p>

<p>
  <strong>Check in date:</strong>
  <%= @booking.start_date %>
</p>

<p>
  <strong>Check out date:</strong>
  <%= @booking.end_date %>
</p>

<p>
	<strong>Total no. of Days</strong>
	<%= (@booking.end_date - @booking.start_date).to_i %>
	
</p>

<p>
	<strong>Total Price</strong>
	<%= @booking.total_price %>
</p>

<%= link_to "Make Payment", braintree_new_path %>

<% if @booking.start_date != DateTime.now.to_date %>
<%= link_to 'Edit', edit_booking_path(@booking) %> 
<% end %>
<%= link_to 'Back', bookings_path %>
